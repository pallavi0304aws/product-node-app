pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Run Test Script') {
            steps {
                bat 'echo Application build successful'
            }
        }
    }

    post {
        success {
            echo 'üéâ PIPELINE EXECUTED SUCCESSFULLY!'
        }
        failure {
            echo '‚ùå PIPELINE FAILED!'
        }
        always {
            echo 'Pipeline execution finished.'
        }
    }
}
